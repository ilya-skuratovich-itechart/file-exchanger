@{
    ViewBag.Title = "UserFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">
    $(document).ready(function() {
        $('#userFiles').dataTable(
        {
            "oLanguage": {
                "sEmptyTable": "No files found."
            },
            "bFilter": false,
            "bServerSide": true,
            "sAjaxSource": '@Url.Action(MVC.File.ActionNames.UserFilesTableFilter, MVC.File.Name)',
                "aoColumns": [
                    {
                        "sName": "FileId",
                        "bSearchable": false,
                        "bSortable": false,
                        "visible": false
                    },
                    {
                        "sName": "btn_editFile",
                        "bSearchable": false,
                        "bSortable": false,
                        "visible": true,
                        "mRender": function (data, type, oObj) {
                            return ' <a class="glyphicon glyphicon-pencil" href=\"@Url.Action(MVC.File.ActionNames.EditUserFile, MVC.File.Name)/' +
                                oObj[0] + '"></a>';
                    }
                },
                {
                    "sName": "OrigFileName",
                    "bSearchable": false,
                    "bSortable": false
                },
                {
                    "sName": "CreateDate",
                    "bSearchable": false,
                    "bSortable": false
                }, {
                    "sName": "ModifyDate",
                    "bSearchable": false,
                    "bSortable": false
                }
            ]
        });
        $('#userFiles')
            .removeClass('display')
            .addClass('table table-striped table-bordered');
    });
    </script>

    @Styles.Render("~/Content/datatable")
    @Scripts.Render("~/bundles/datatable")

}
<div class="col-lg-12">
    <h1 class="page-header">My files</h1>
</div>

<div class="col-lg-12 page-header">
    @Html.ActionLink("Add a new file", MVC.File.ActionNames.AddUserFile, MVC.File.Name, null, new { @class = "btn btn-default" })
</div>
<table cellpadding="0" cellspacing="0" border="0" id="userFiles">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>File name</th>
            <th>Created date</th>
            <th>Modified date</th>
        </tr>
    </thead>
</table>
