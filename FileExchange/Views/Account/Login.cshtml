@model FileExchange.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
   
</hgroup>

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <h2 class="form-signin-heading">Please sign in</h2>

            @Html.LabelFor(m => m.UserName, new { @class = "sr-only" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Email address" })
            @Html.ValidationMessageFor(m => m.UserName)

            @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
            @Html.ValidationMessageFor(m => m.Password)
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </label>
            </div>
            <input type="submit" class="btn btn-lg btn-primary btn-block"  value="Log in" />
        </fieldset>
        <p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
